        log_settings: "⚙️ Settings saved"
      }
    };

    function setLanguage(lang) {
      document.querySelectorAll("[data-label]").forEach(el => {
        const key = el.getAttribute("data-label");
        el.innerText = translations[lang][key];
      });
    }

    // Standard: Deutsch
    setLanguage("de");
